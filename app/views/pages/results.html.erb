<% unless @valid %>
{
	"results": "You are not allowed to be here."
}
<% else %>
{
	"results": [
		<% @places.each_with_index do |place, index| %>
			<% if index < 10 %>
				{
					"id": <%= place["id"] %>,
		            "name": "<%= place["name"] %>",
		            "found": "<%= place["found"] %>",
		            "type_filter": <%= place["type_filter"].inspect %>,
		            "ambience_filter": <%= place["ambience_filter"].inspect %>,
		            "coordinates": {
		                "latitude": <%= place["latitude"] %>,
		                "longitude": <%= place["longitude"] %>
		            },
		            "has_offers": <%= place["has_offers"] %>,
		            "is_payment_available": <%= place["is_payment_available"] %>,
		            "is_booking_available": <%= place["is_booking_available"] %>,
		            "is_favorited": <%= place["is_favorited"] %>,
		            "picture_url": "<%= place["picture_url"] %>"
	        
				},
			<% elsif index == 10 %>
				{
					"id": <%= place["id"] %>,
		            "name": "<%= place["name"] %>",
		            "found": "<%= place["found"] %>",
		            "type_filter": <%= place["type_filter"].inspect %>,
		            "ambience_filter": <%= place["ambience_filter"].inspect %>,
		            "coordinates": {
		                "latitude": <%= place["latitude"] %>,
		                "longitude": <%= place["longitude"] %>
		            },
		            "has_offers": <%= place["has_offers"] %>,
		            "is_payment_available": <%= place["is_payment_available"] %>,
		            "is_booking_available": <%= place["is_booking_available"] %>,
		            "is_favorited": <%= place["is_favorited"] %>,
		            "picture_url": "<%= place["picture_url"] %>"
	        
				}
			<% end %>
		<% end %>
	]
}			
<% end %>

